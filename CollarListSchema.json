{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "http://example.com/root.json",
	"type": "object",
	"title": "The Schema for a Collar List of Measures",
	"properties": {
		"sequenceNumber": {
			"$id": "#/properties/sequenceNumber",
			"type": "integer",
			"title": "The Sequence Number",
			"default": 0,
			"examples": [
				123
			]
		},
		"collars": {
			"$id": "#/properties/collars",
			"type": "array",
            "minItems": 1,
			"items": {
				"type": "object",
				"properties": {
					"resourceId": {
						"$id": "#/properties/collars/items/properties/resourceId",
						"type": "string",
						"title": "The ResourceId",
						"default": ""
					},
					"location": {
						"$id": "#/properties/collars/items/properties/location",
						"type": "object",
						"title": "The Location Schema",
						"$ref": "Definitions.json#/location"
					},
					"resultTime": {
						"$id": "#/properties/collars/items/properties/resultTime",
						"type": "integer",
						"title": "The Result time",
						"default": 0,
						"examples": [
							1558086914
						]
					},
					"resourceAlarm": {
						"$id": "#/properties/collar/items/properties/resourceAlarm",
						"type": "boolean"
					},
					"anomalies": {
						"$id": "#/properties/collar/items/properties/anomalies",
						"type": "object",
						"properties": {
							"locationAnomaly": {
								"type": "boolean"
							},
							"temperatureAnomaly": {
								"type": "boolean"
							},
							"distanceAnomaly": {
								"type": "boolean"
							},
							"activityAnomaly": {
								"type": "boolean"
							},
							"positionAnomaly": {
								"type": "boolean"
							}
						},
						"additionalProperties": false,
						"required": [
							"locationAnomaly",
							"temperatureAnomaly",
							"distanceAnomaly",
							"activityAnomaly",
							"positionAnomaly"
						]
					},
					"acceleration": {
						"$id": "#/properties/collar/items/properties/acceleration",
						"type": "object",
						"properties": {
							"accX": {
								"type": "number"
							},
							"accY": {
								"type": "number"
							},
							"accZ": {
								"type": "number"
							}
						},
						"additionalProperties": false,
						"required": [
							"accX",
							"accY",
							"accZ"
						]
					},
					"temperature": {
						"$id": "#/properties/collar/items/properties/temperature",
						"type": "number"
					}
				},
				"additionalProperties": false,
				"required": [
					"resourceId",
					"location",
					"resultTime",
					"resourceAlarm",
					"anomalies",
					"acceleration",
					"temperature"
				]
			}
		}
	},
	"additionalProperties": false,
	"required": [
		"collars"
	]
}
