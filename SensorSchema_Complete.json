{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.com/root.json",
  "type": "object",
  "title": "The Complete Schema for a Simple Measurement",
  "required": [
    "resourceId",
    "location",
    "observedProperty",
    "resultTime",
    "result"
  ],
  "properties": {
    "resourceId": {
      "$id": "#/properties/resourceId",
      "type": "string",
      "title": "The ResourceId",
      "default": "",
      "examples": [
        "urn:afc:FCDB:environmentalObservations:TST:airSensor:airTemperatureSensor0012"
      ],
      "pattern": "urn:afc(:[^:]+){5}"
    },
    "sequenceNumber": {
      "$id": "#/properties/sequenceNumber",
      "type": "integer",
      "title": "The Sequence Number",
      "default": 0,
      "examples": [
        123
      ]
    },
    "location": {
      "$id": "#/properties/location",
      "type": "object",
      "title": "The Location Schema",
      "$ref" : "Definitions.json#/location"
    },
    "observedProperty": {
      "$id": "#/properties/observedProperty",
      "type": "string",
      "title": "The Observed Property",
      "default": "",
      "examples": [
        "air_temperature"
      ]
    },
    "resultTime": {
      "$id": "#/properties/resultTime",
      "type": "integer",
      "title": "The Result time",
      "default": 0,
      "examples": [
        1558086914
      ]
    },
   "result": {
      "$id": "#/properties/result",
      "type": "object",
      "title": "The Result Schema",
      "$ref": "#/definitions/result"
    }
  },
  "additionalProperties": false, 
 "definitions": {
    
    "result": {
      "$id": "#/definitions/result",
      "type": "object",
      "title": "The Result Schema",
      "required": [
        "value",
        "uom"
      ],
      "properties": {
        "value": {
          "type": "number",
          "title": "The Result Value",
          "default": 0.0,
          "examples": [
            3.2
          ]
        },
        "uom": {
          "type": "string",
          "title": "The Unity of Measure",
          "default": "",
          "examples": [
            "http://qudt.org/vocab/unit/DEG_C"
          ]
        }
      },
	  "additionalProperties": false
    }
	
  }  
}
